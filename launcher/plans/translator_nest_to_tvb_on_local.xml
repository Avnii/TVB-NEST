<?xml version="1.0" encoding="UTF-8" ?>
<settings>
    <co_simulation_plan>
        <title>Test the translator Nest to TVB</title>
        <description>Test the translator Nest to TVB</description>
        <plan_parameters>
            <actions_location_path>CO_SIM_XML_ACTIONS_DIR</actions_location_path>
            <execution_environment>Local</execution_environment>
        </plan_parameters>
        <action_plan_variables>
            <var_000>
                <var_name>CO_SIM_DELAY</var_name>
                <var_value>100</var_value>
            </var_000>
            <var_001>
                <var_name>CO_SIM_RESULTS_DIR</var_name>
                <!-- generated on runtime by the configuration manager -->
                <var_value>CO_SIM_RUNTIME_RESULTS_DIR</var_value>
            </var_001>
            <var_002>
                <var_name>CO_SIM_INPUT_FILE</var_name>
                <var_value>input/0.txt</var_value>
            </var_002>
            <var_003>
                <var_name>CO_SIM_OUTPUT_FILE</var_name>
                <var_value>output/0.txt</var_value>
            </var_003>
        </action_plan_variables>
        <action_plan>
            <action_000>
                <action_script>numpy_generator.py</action_script>
                <action_parameters>CO_SIM_RESULTS_DIR</action_parameters>
            </action_000>
            <action_002>
                <action_script>nest_to_tvb.py</action_script>
                <action_parameters>
                    <argv_1_results_dir>CO_SIM_RESULTS_DIR</argv_1_results_dir>
                    <argv_2_input_file>CO_SIM_INPUT_FILE</argv_2_input_file>
                    <argv_3_output_file>CO_SIM_OUTPUT_FILE</argv_3_output_file>
                </action_parameters>
            </action_002>
            <action_004>
                <action_script>test_input_nest_to_tvb.py</action_script>
                <action_parameters>
                    <argv_1_input_file>CO_SIM_RESULTS_DIR/CO_SIM_INPUT_FILE</argv_1_input_file>
                    <argv_2_delay>CO_SIM_DELAY</argv_2_delay>
                </action_parameters>
            </action_004>
            <action_006>
                <action_script>test_receive_nest_to_tvb.py</action_script>
                <action_parameters>
                    <argv_1_input_file>CO_SIM_RESULTS_DIR/CO_SIM_OUTPUT_FILE</argv_1_input_file>
                </action_parameters>
            </action_006>
        </action_plan>
    </co_simulation_plan>
</settings>
