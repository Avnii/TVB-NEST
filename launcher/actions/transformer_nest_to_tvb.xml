            <var_000>
                <var_name>__no_variable_name__</var_name>
                <var_value>__no_variable_value__</var_value>
            </var_000>
        </variables>
        <parameters>
            <par_000>
                <par_name>__no_parameter_name__</par_name>
                <par_value>__no_parameter_value__</par_value>
            </par_000>
        </parameters>
        <action>
            <!--
            please use a name suggesting the components and the
            direction of the flow, e.g. transformer_nest_output_into_tvb_input.py
            -->
